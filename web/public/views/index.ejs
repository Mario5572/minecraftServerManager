<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="output.css">
  <title>Minecraft Servers</title>
</head>
<body>
  <div class="min-h-screen bg-gradient-to-br from-gray-900 to-gray-800 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-white mb-4">Minecraft Servers</h1>
        <p class="text-gray-400 text-lg">Choose your adventure from our curated server list</p>
      </div>
      
      <!-- Grid para mostrar las tarjetas -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% servers.forEach(server => { %>
          <%- include('partials/serverCard', { 
                imageRoute: server.image,
                maxPlayers: server.players,
                name: server.name,
                description: server.description,
                version: server.version
            }) %>
        <% }) %>
      </div>
    </div>
  </div>
</body>
</html>
